    <!-- carousel test -->
    <iscomment>
        <div class="container">
            <div class="carousel-container" id="newProductCarouselContainer">
                <div class="new-product-carousel">
                    <!-- New product carousel items go here -->
                    <span>new products</span>
                    <span>new products</span>
