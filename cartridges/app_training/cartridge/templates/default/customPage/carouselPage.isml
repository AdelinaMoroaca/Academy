        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js"></script>
    <iscomment>
        <script>
        console.log(typeof jQuery !== 'undefined' ? 'jQuery is loaded' : 'jQuery is missing');

        $(window).on('load', function() {
            function carouselInitializer(className) {
                $(document).ready(function () {
                    $(className).slick({
                        infinite: true,
                        slidesToShow: 3,
                        slidesToScroll: 3
                    });
                });
            }

            carouselInitializer('.new-product-carousel');
        });
    </script>
